<!DOCTYPE html>
<html>
<head>
    <title>PULSY</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --bg-primary: #FAFAF9;
            --bg-secondary: #F5F5F4;
            --bg-tertiary: #E7E5E4;
            --bg-card: #FFFFFF;
            --bg-hover: #F9F9F8;
            /* Subtle color palette */
            --slate: #64748B;
            --slate-hover: #475569;
            --slate-light: #F1F5F9;
            --sage: #6B9080;
            --sage-light: #EDF4F2;
            --lavender: #9B87C7;
            --lavender-light: #F3F0FB;
            --rose: #D4838F;
            --rose-light: #FCF0F2;
            --amber: #D4A574;
            --amber-light: #FBF7F0;
            /* Semantic colors */
            --text-primary: #1C1917;
            --text-secondary: #78716C;
            --text-tertiary: #A8A29E;
            --border: #E7E5E4;
            --border-light: #F5F5F4;
            --success: #6B9080;
            --warning: #D4A574;
            --error: #D4838F;
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 10px 40px rgba(0, 0, 0, 0.1);
            --shadow-xl: 0 20px 60px rgba(0, 0, 0, 0.12);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            margin: 0;
            overflow: hidden;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Main Container - Full Screen Centered */
        .app-container {
            display: flex;
            height: 100vh;
            position: relative;
        }

        /* Collapsible Sidebar Toggle */
        .sidebar-toggle {
            position: fixed;
            top: 28px;
            left: 28px;
            width: 44px;
            height: 44px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1000;
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-sm);
        }

        .sidebar-toggle:hover {
            background: var(--bg-card);
            border-color: var(--slate);
            box-shadow: var(--shadow-md), 0 0 0 3px var(--slate-light);
            transform: scale(1.05);
        }

        .sidebar-toggle:active {
            transform: scale(0.95);
        }

        .sidebar-toggle i {
            color: var(--text-primary);
            font-size: 17px;
            font-weight: 600;
        }

        /* Sliding Sidebar */
        .sidebar {
            position: fixed;
            left: -440px;
            top: 0;
            width: 440px;
            height: 100vh;
            background: var(--bg-card);
            border-right: 1px solid var(--border);
            padding: 88px 36px 36px;
            overflow-y: auto;
            transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 999;
            box-shadow: var(--shadow-lg);
        }

        .sidebar.open {
            left: 0;
        }

        .sidebar::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: transparent;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 10px;
        }

        .sidebar-close {
            position: absolute;
            top: 28px;
            right: 28px;
            width: 36px;
            height: 36px;
            background: var(--bg-tertiary);
            border: 1px solid var(--border);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .sidebar-close:hover {
            background: var(--error);
            border-color: var(--error);
            color: white;
            transform: rotate(90deg) scale(1.05);
        }

        .sidebar-close i {
            color: var(--text-secondary);
            transition: color 0.2s ease;
        }

        .sidebar-close:hover i {
            color: white;
        }

        .sidebar-section {
            margin-bottom: 40px;
        }

        .sidebar-header {
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            color: var(--text-tertiary);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .sidebar-header::before {
            content: '';
            width: 3px;
            height: 16px;
            background: linear-gradient(to bottom, var(--slate), var(--lavender));
            border-radius: 2px;
        }

        /* Metric Card - Beautiful Card Style */
        .metric-card {
            background: var(--bg-card);
            border-radius: 18px;
            padding: 24px;
            margin-bottom: 14px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid var(--border-light);
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .metric-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 3px;
            height: 100%;
            background: var(--slate);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .metric-card:hover {
            border-color: var(--border);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .metric-card:hover::before {
            opacity: 1;
        }

        .metric-label {
            font-size: 12px;
            color: var(--text-tertiary);
            margin-bottom: 10px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .metric-value {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: -1px;
        }

        .goal-card {
            background: var(--bg-secondary);
            border-radius: 18px;
            padding: 24px;
            margin-bottom: 14px;
            transition: all 0.2s ease;
            border: 1px solid var(--border);
            position: relative;
        }

        .goal-card:hover {
            transform: translateY(-1px);
            box-shadow: var(--shadow-sm);
            background: var(--bg-card);
        }

        .goal-name {
            font-size: 16px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 14px;
            letter-spacing: -0.3px;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 700;
            margin-bottom: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-badge::before {
            content: '';
            width: 6px;
            height: 6px;
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }

        .status-active {
            background: var(--sage-light);
            color: var(--sage);
            border: 1px solid rgba(107, 144, 128, 0.2);
        }

        .status-active::before {
            background: var(--sage);
        }

        .status-completed {
            background: var(--lavender-light);
            color: var(--lavender);
            border: 1px solid rgba(155, 135, 199, 0.2);
        }

        .status-completed::before {
            background: var(--lavender);
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.5; transform: scale(0.9); }
        }

        .goal-dates {
            font-size: 13px;
            color: var(--text-secondary);
            margin-bottom: 18px;
            line-height: 1.6;
            font-weight: 500;
        }

        .goal-action-btn {
            width: 100%;
            padding: 12px 18px;
            background: var(--slate);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            letter-spacing: -0.2px;
        }

        .goal-action-btn:hover {
            background: var(--slate-hover);
            transform: translateY(-1px);
            box-shadow: var(--shadow-sm);
        }

        .goal-action-btn:active {
            transform: translateY(0);
        }

        /* Main Chat Area - Center Stage */
        .chat-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            max-width: 900px;
            margin: 0 auto;
            width: 100%;
            padding: 0 24px;
        }

        /* Top Bar - Minimalist */
        .chat-header {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 32px 0 28px;
            border-bottom: 1px solid var(--border);
            margin-bottom: 40px;
            position: relative;
        }

        .chat-header::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 2px;
            background: linear-gradient(to right, transparent, var(--lavender), transparent);
        }

        .app-title {
            font-size: 18px;
            font-weight: 700;
            letter-spacing: -0.5px;
            color: var(--text-primary);
        }

        /* Messages - Clean and Spacious */
        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 0 0 32px;
            scroll-behavior: smooth;
        }

        .chat-messages::-webkit-scrollbar {
            width: 6px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: transparent;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 10px;
        }

        .message {
            margin-bottom: 32px;
            animation: fadeInUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
            max-width: 100%;
        }

        .message-assistant {
            display: flex;
            gap: 14px;
            align-items: flex-start;
        }

        .message-avatar {
            width: 42px;
            height: 42px;
            flex-shrink: 0;
            position: relative;
        }

        /* Pulsy Bot Animation */
        .pulsy-bot {
            width: 42px;
            height: 42px;
            position: relative;
            animation: float-bot 3s ease-in-out infinite;
        }

        .pulsy-bot-head {
            width: 42px;
            height: 42px;
            background: linear-gradient(135deg, var(--lavender), var(--sage));
            border-radius: 50%;
            position: relative;
            box-shadow: 0 4px 12px rgba(155, 135, 199, 0.25);
            border: 2.5px solid var(--bg-card);
        }

        .pulsy-bot-antenna {
            position: absolute;
            width: 2px;
            height: 8px;
            background: var(--lavender);
            top: -6px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        .pulsy-bot-antenna::after {
            content: '';
            position: absolute;
            width: 6px;
            height: 6px;
            background: var(--rose);
            border-radius: 50%;
            top: -5px;
            left: 50%;
            transform: translateX(-50%);
            animation: antenna-blink 2s ease-in-out infinite;
            box-shadow: 0 0 8px rgba(212, 131, 143, 0.5);
        }

        .pulsy-bot-eyes {
            display: flex;
            gap: 8px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -60%);
        }

        .pulsy-bot-eye {
            width: 7px;
            height: 7px;
            background: white;
            border-radius: 50%;
            position: relative;
            animation: blink 4s ease-in-out infinite;
        }

        .pulsy-bot-eye::after {
            content: '';
            position: absolute;
            width: 3px;
            height: 3px;
            background: var(--lavender);
            border-radius: 50%;
            top: 2px;
            left: 2px;
        }

        .pulsy-bot-mouth {
            position: absolute;
            bottom: 12px;
            left: 50%;
            transform: translateX(-50%);
            width: 16px;
            height: 8px;
            border: 2px solid white;
            border-top: none;
            border-radius: 0 0 12px 12px;
            animation: smile 3s ease-in-out infinite;
        }

        @keyframes float-bot {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-4px) rotate(2deg); }
        }

        @keyframes blink {
            0%, 45%, 55%, 100% { transform: scaleY(1); }
            50% { transform: scaleY(0.1); }
        }

        @keyframes antenna-blink {
            0%, 50%, 100% { opacity: 1; transform: translateX(-50%) scale(1); }
            25% { opacity: 0.4; transform: translateX(-50%) scale(0.8); }
            75% { opacity: 0.6; transform: translateX(-50%) scale(1.1); }
        }

        @keyframes smile {
            0%, 100% { width: 16px; }
            50% { width: 20px; }
        }

        .message-content {
            flex: 1;
            padding: 20px 24px;
            background: var(--bg-card);
            border: 1px solid var(--border-light);
            border-radius: 20px;
            border-top-left-radius: 6px;
            font-size: 15px;
            line-height: 1.7;
            color: var(--text-primary);
            box-shadow: var(--shadow-sm);
            transition: all 0.2s ease;
        }

        .message-content:hover {
            box-shadow: var(--shadow-md);
            border-color: var(--border);
        }

        .message-content strong {
            font-weight: 700;
            color: var(--slate);
        }

        .message-user {
            display: flex;
            justify-content: flex-end;
        }

        .message-user .message-content {
            background: var(--slate);
            color: white;
            border-radius: 20px;
            border-top-right-radius: 6px;
            max-width: 75%;
            border: none;
            box-shadow: var(--shadow-sm);
        }

        .message-user .message-content:hover {
            box-shadow: var(--shadow-md);
        }

        /* Input Area - Notion-like Command Bar */
        .chat-input {
            padding: 28px 0 36px;
            border-top: 1px solid var(--border);
            position: relative;
        }

        .chat-input::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 1px;
            background: linear-gradient(to right, transparent, var(--sage), transparent);
            opacity: 0.3;
        }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: flex-end;
            gap: 10px;
            background: var(--bg-card);
            border: 2px solid var(--border);
            border-radius: 18px;
            padding: 6px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-sm);
        }

        .input-wrapper:focus-within {
            border-color: var(--slate);
            background: var(--bg-card);
            box-shadow: 0 0 0 4px var(--slate-light), var(--shadow-md);
            transform: translateY(-2px);
        }

        .input-field {
            flex: 1;
            border: none;
            background: transparent;
            color: var(--text-primary);
            font-size: 15px;
            padding: 14px 18px;
            resize: none;
            min-height: 24px;
            max-height: 150px;
            font-family: inherit;
            outline: none;
            line-height: 1.6;
            font-weight: 500;
        }

        .input-field::placeholder {
            color: var(--text-tertiary);
            font-weight: 400;
        }

        .send-button {
            width: 44px;
            height: 44px;
            background: var(--slate);
            color: white;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
            flex-shrink: 0;
        }

        .send-button:hover {
            background: var(--slate-hover);
            transform: scale(1.05);
        }

        .send-button:active {
            transform: scale(0.92);
        }

        .send-button i {
            font-size: 17px;
            font-weight: 900;
        }

        /* Backdrop for Sidebar */
        .sidebar-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 998;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
        }

        .sidebar-backdrop.active {
            opacity: 1;
            visibility: visible;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
                filter: blur(4px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }

        /* Loading Skeleton (for future use) */
        @keyframes shimmer {
            0% { background-position: -1000px 0; }
            100% { background-position: 1000px 0; }
        }

        .skeleton {
            background: linear-gradient(90deg, var(--bg-secondary) 0%, var(--bg-tertiary) 50%, var(--bg-secondary) 100%);
            background-size: 1000px 100%;
            animation: shimmer 2s infinite;
        }

        /* Inline Metric Cards in Chat */
        .inline-metric-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 14px;
            margin: 20px 0;
        }

        .inline-metric {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 18px;
            text-align: center;
            transition: all 0.2s ease;
        }

        .inline-metric:hover {
            transform: translateY(-1px);
            box-shadow: var(--shadow-sm);
            background: var(--bg-secondary);
        }

        .inline-metric-label {
            font-size: 11px;
            color: var(--text-tertiary);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            font-weight: 600;
        }

        .inline-metric-value {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: -0.5px;
        }

        /* Emoji Enhancement */
        .emoji {
            font-style: normal;
            font-size: 1.2em;
            vertical-align: middle;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                left: -100%;
            }
            
            .chat-container {
                padding: 0 16px;
            }

            .sidebar-toggle {
                top: 20px;
                left: 20px;
            }

            .message-content {
                font-size: 14px;
            }

            .app-title {
                font-size: 18px;
            }
        }

        /* Dark Mode Ready (for future) */
        @media (prefers-color-scheme: dark) {
            /* Variables can be overridden here for automatic dark mode */
        }
    </style>
</head>
<body>
    <%- include('partials_header.ejs') %>
    
    <!-- Sidebar Toggle Button -->
    <div class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </div>

    <!-- Backdrop -->
    <div class="sidebar-backdrop" onclick="toggleSidebar()"></div>

    <!-- Collapsible Sidebar -->
    <aside class="sidebar" id="sidebar">
        <button class="sidebar-close" onclick="toggleSidebar()">
            <i class="fas fa-times"></i>
        </button>

            <div class="sidebar-section">
            <h3 class="sidebar-header">Health Metrics</h3>
                <% if (typeof user_metrics !== 'undefined' && user_metrics.length > 0) { %>
                    <% for (const [metric_name, metric_data] of Object.entries(user_metrics[0])) { %>
                        <div class="metric-card">
                                <div class="metric-label"><%= metric_name %></div>
                                <div class="metric-value"><%= metric_data %></div>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="metric-card">
                            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                                <div class="metric-label"><%= errorMessage %></div>
                            <% } else { %>
                                <div class="metric-label">No metrics available</div>
                            <% } %>
                    </div>
                <% } %>
            </div>

            <div class="sidebar-section">
            <h3 class="sidebar-header">Active Goals</h3>
                <% if (typeof user_goals !== 'undefined' && Object.keys(user_goals).length > 0) { %>
                    <% for (const [goal_name, goal_data] of Object.entries(user_goals)) { %>
                    <div class="goal-card">
                        <div class="goal-name"><%= goal_name %></div>
                        <span class="status-badge <%= 
                                        goal_data.goal_status === 'active' || goal_data.goal_status === 'completed' 
                            ? 'status-active' 
                            : 'status-completed'
                                    %>">
                                        <%= goal_data.goal_status %>
                                    </span>
                        <div class="goal-dates">
                            <%= goal_data.goal_start_date %> â†’ <%= goal_data.goal_end_date %>
                                </div>
                                <form action="/chat/query" method="POST">
                                    <input type="hidden" name="query" value="Can you give me an update on my goal: <%= goal_name %> from <%= goal_data.goal_start_date %> to <%= goal_data.goal_end_date %>">
                            <button type="submit" class="goal-action-btn">
                                View Progress
                                    </button>
                                </form>
                        </div>
                    <% } %>
                <% } else { %>
                <div class="goal-card">
                    <div class="metric-label">No active goals</div>
                    </div>
                <% } %>
            </div>
        </aside>

    <!-- Main Chat Container -->
    <div class="app-container">
        <main class="chat-container">
            <!-- Minimalist Header -->
            <header class="chat-header">
                <h1 class="app-title">PULSY</h1>
            </header>

            <!-- Messages Area -->
            <div class="chat-messages" id="chatMessages">
                <div class="message message-assistant">
                    <div class="message-avatar">
                        <div class="pulsy-bot">
                            <div class="pulsy-bot-head">
                                <div class="pulsy-bot-antenna"></div>
                                <div class="pulsy-bot-eyes">
                                    <div class="pulsy-bot-eye"></div>
                                    <div class="pulsy-bot-eye"></div>
                                </div>
                                <div class="pulsy-bot-mouth"></div>
                            </div>
                        </div>
                    </div>
                    <div class="message-content">
                        <strong>Hey there! ðŸ‘‹</strong><br><br>
                        I'm your AI health companion, here to help you unlock your wellness potential. I can analyze your metrics, track your progress, and guide you toward your goals.<br><br>
                        <em>What would you like to explore today?</em>
                    </div>
                </div>

                <% if (typeof query_history !== 'undefined' && query_history.length > 0) { %>
                    <% for(let i = 0; i < query_history.length; i++) { %>
                        <div class="message message-user">
                            <div class="message-content">
                            <%= query_history[i] %>
                            </div>
                        </div>
                        
                        <% if (response_history[i]) { %>
                            <div class="message message-assistant">
                                <div class="message-avatar">
                                    <div class="pulsy-bot">
                                        <div class="pulsy-bot-head">
                                            <div class="pulsy-bot-antenna"></div>
                                            <div class="pulsy-bot-eyes">
                                                <div class="pulsy-bot-eye"></div>
                                                <div class="pulsy-bot-eye"></div>
                                            </div>
                                            <div class="pulsy-bot-mouth"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="message-content">
                                <%- response_history[i] %>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                <% } %>
            </div>

            <!-- Input Area -->
            <div class="chat-input">
                <form action="/chat/query" method="POST">
                    <div class="input-wrapper">
                        <textarea 
                            name="query"
                            class="input-field"
                            placeholder="Ask anything..."
                            rows="1"
                        ></textarea>
                        <button type="submit" class="send-button">
                            <i class="fas fa-arrow-up"></i>
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script>
        // Toggle Sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.querySelector('.sidebar-backdrop');
            sidebar.classList.toggle('open');
            backdrop.classList.toggle('active');
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Auto-scroll to bottom of chat
            const chatMessages = document.getElementById('chatMessages');
            chatMessages.scrollTop = chatMessages.scrollHeight;

            // Auto-resize textarea
            const textarea = document.querySelector('.input-field');
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 150) + 'px';
            });

            // Close sidebar on escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    const sidebar = document.getElementById('sidebar');
                    const backdrop = document.querySelector('.sidebar-backdrop');
                    if (sidebar.classList.contains('open')) {
                        sidebar.classList.remove('open');
                        backdrop.classList.remove('active');
                    }
                }
            });

            // Focus input on load
            textarea.focus();
        });
    </script>
</body>
</html>

