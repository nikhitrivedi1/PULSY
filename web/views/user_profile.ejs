i<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
    <title>User Profile</title>
    <style>
        body {
            font-family: "Aeonik", -apple-system, BlinkMacSystemFont, sans-serif;
            background: #E8E1D7;
            color: #1a1a1a;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .profile-container {
            margin-top: 80px;
            padding: 40px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .profile-header {
            margin-bottom: 40px;
        }

        .profile-header h1 {
            color: #0B365B;
            font-size: 2rem;
            margin: 0;
        }

        .profile-form {
            background: #F5F1EB;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            color: #0B365B;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid #D4CEC4;
            border-radius: 8px;
            font-size: 1rem;
            background: white;
        }

        .form-group input:focus {
            outline: none;
            border-color: #0B365B;
        }

        .save-button {
            background: #0B365B;
            color: #E8E1D7;
            border: none;
            padding: 12px 24px;
            border-radius: 20px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.2s;
        }

        .save-button:hover {
            opacity: 0.9;
        }

        .success-message {
            color: #2ecc71;
            margin-top: 16px;
            text-align: center;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .error-message {
            color: #e74c3c;
            margin-top: 16px;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>
    <%- include('partials_header.ejs') %>

    <div class="profile-container">
        <div class="profile-header">
            <h1>User Profile</h1>
        </div>

        <% if (successMessage) { %>
            <div class="success-message">
                <i class="fas fa-check-circle"></i>
                <%= successMessage %>
            </div>
        <% } %>

        <% if (errorMessage) { %>
            <div class="error-message">
                <%= errorMessage %>
            </div>
        <% } %>

        <form class="profile-form" action="/user_profile/update" method="POST">
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" id="age" name="age" value="<%= user_profile.age %>" required>
            </div>

            <div class="form-group">
                <label for="gender">Gender</label>
                <input type="text" id="gender" name="gender" value="<%= user_profile.gender %>" required>
            </div>

            <div class="form-group">
                <label for="height_ft">Height (ft)</label>
                <input type="number" id="height_ft" name="height_ft" value="<%= user_profile.height_ft %>" required>
            </div>

            <div class="form-group">
                <label for="height_in">Height (in)</label>
                <input type="number" id="height_in" name="height_in" value="<%= user_profile.height_in %>" required>
            </div>

            <div class="form-group">
                <label for="weight">Weight (lbs)</label>
                <input type="number" id="weight" name="weight" value="<%= user_profile.weight %>" required>
            </div>

            <div class="form-group">
                <label for="health_conditions">Health Conditions</label>
                <input type="text" id="health_conditions" name="health_conditions" value="<%= user_profile.health_conditions %>" required>
            </div>

            <button type="submit" class="save-button">Save Changes</button>
        </form>
    </div>

    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
</body>
</html>