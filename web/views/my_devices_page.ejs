<!DOCTYPE html>
<html>
<head>
    <title>My Devices - AI Wearables Advisor</title>
    <link rel="stylesheet" href="chatPage.css">
    <style>
        body {
            font-family: "Aeonik", -apple-system, BlinkMacSystemFont, sans-serif;
            background: #E8E1D7;
            color: #1a1a1a;
            display: flex;
            overflow-x: hidden;
            justify-content: center;
        }

        .devices-container {
            margin: 80px auto 0;
            max-width: 1200px;
            padding: 2rem;
            width: 100%;
            box-sizing: border-box;
        }

        .devices-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            text-align: center;
        }

        .devices-title {
            font-size: 2rem;
            color: #0B365B;
            font-weight: 600;
        }

        .add-device-btn {
            padding: 12px 28px;
            border: 2px solid #0B365B;
            border-radius: 24px;
            background: #0B365B;
            color: #E8E1D7;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.2s ease;
            min-width: 120px;
        }

        .add-device-btn:hover {
            background: transparent;
            color: #0B365B;
        }

        .device-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
            justify-items: center;
        }

        .device-card {
            background: #F5F1EB;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            width: 100%;
            max-width: 300px;
            padding: 1.5rem;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .device-header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            width: 100%;
            margin-bottom: 1rem;
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .status-active {
            background: #34C759;
        }

        .device-image {
            width: 80%;
            height: 160px;
            object-fit: contain;
            margin: 1rem auto;
            display: block;
        }

        .device-info {
            width: 100%;
            margin: 1rem 0;
            text-align: center;
        }

        .device-info p {
            margin: 0.5rem 0;
            color: #0B365B;
        }

        .remove-device-btn {
            padding: 8px 16px;
            border: 2px solid #FF3B30;
            border-radius: 24px;
            background: #FF3B30;
            color: #fff;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 0.9rem;
            margin-top: 1rem;
            width: 100%;
        }

        .remove-device-btn:hover {
            background: transparent;
            color: #FF3B30;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: #F5F1EB;
            padding: 2rem;
            border-radius: 16px;
            width: 100%;
            max-width: 500px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.25rem;
            color: #0B365B;
            font-weight: 500;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 2px solid #D4CEC4;
            border-radius: 12px;
            background: #fff;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <%- include('partials_header.ejs') %>

    <!-- Main Content -->
    <div class="devices-container">
        <div class="devices-header">
            <h1 class="devices-title">My Devices</h1>
            <button class="add-device-btn" onclick="openAddDeviceModal()">
                <i class="fas fa-plus"></i> Add New Device
            </button>
        </div>

        <div class="device-grid">
            <% if (typeof user_devices !== 'undefined' && user_devices && Object.keys(user_devices).length > 0) { %>
                <% Object.entries(user_devices).forEach(function([rawDeviceType, api_key]) { 
                    // rawDeviceType is like '{"Oura Ring"}'
                    let device_type = rawDeviceType;
                    // Remove wrapping {" and "} (or any outer curly braces and quotes)
                    device_type = device_type.replace(/^\{["']?/, '').replace(/["']?\}$/, '');
                    
                    // Lowercase for image switch
                    let type_key = device_type.toLowerCase().replace(/\s/g, "_");
                    let imageSrc = "/assets/oura_ring.png";
                    if (type_key === "oura_ring") imageSrc = "/assets/oura_ring.png";
                    else if (type_key === "fitbit") imageSrc = "/assets/fitbit.png";
                    else if (type_key === "apple_watch") imageSrc = "/assets/apple_watch.png";
                %>
                    <div class="device-card">
                        <div class="device-image-container" style="position: relative; display: flex; justify-content: center; align-items: center; margin-bottom: 1rem;">
                            <!-- "Glass orb" effect using clip-path, gradients, and shadow for a premium feel -->
                            <div 
                                style="
                                    width: 110px;
                                    height: 110px;
                                    background: radial-gradient(circle at 70% 25%, #fff9, #d8e7fa 55%, #cee1f5 70%, #d5d9e6 100%);
                                    box-shadow: 0 4px 12px 0 #b7c6dd3d, 0 0 0 8px #eaf4ff70 inset;
                                    border-radius: 50%;
                                    display: flex;
                                    justify-content: center;
                                    align-items: center;
                                    overflow: hidden;
                                    border: 2.5px solid #eaf1fd;
                                    backdrop-filter: blur(2.5px);
                                    position: relative;
                                ">
                                <img 
                                    src="<%= imageSrc %>" 
                                    alt="<%= device_type %>" 
                                    class="device-image"
                                    style="
                                        width: 76px;
                                        height: 76px;
                                        object-fit: cover;
                                        border-radius: 39% 61% 67% 33% / 50% 45% 55% 50%;
                                        box-shadow:
                                            0 2px 14px 0 #93b1ff1b,
                                            0 0 0 2px #cfd8e6a0;
                                        filter: saturate(1.15) drop-shadow(0 3px 8px #b8cbe5a3);
                                        background: #f6fcff;
                                        transition: box-shadow 0.22s;
                                    "
                                >
                                <!-- reflective light-glare top-left -->
                                <span style="
                                    position: absolute;
                                    top: 20px; left: 23px;
                                    width: 41px; height: 19px;
                                    background: linear-gradient(120deg, #fff9 75%, transparent 100%);
                                    border-radius: 43% 63% 53% 39% / 57% 30% 60% 33%;
                                    opacity: 0.48; pointer-events: none;
                                    filter: blur(2.8px);
                                    z-index: 1;
                                "></span>
                                <!-- bottom-right inner glow -->
                                <span style="
                                    position: absolute;
                                    bottom: 14px; right: 20px;
                                    width: 28px; height: 18px;
                                    background: radial-gradient(circle, #ddf3ff7c 40%, transparent 100%);
                                    border-radius: 60% 40% 44% 56% / 59% 41% 59% 41%;
                                    opacity: 0.46; pointer-events: none;
                                    z-index: 1;
                                "></span>
                            </div>
                            <div class="device-image-overlay">
                                <div class="pulse-ring"></div>
                            </div>
                        </div>
                        <div class="device-header">
                            <div class="status-dot status-active"></div>
                            <h2><%= device_type %></h2>
                        </div>
                        <div class="device-info">
                            <!-- Device type and Status removed as per instruction -->
                            <!-- Optionally show API Key for admin/troubleshooting -->
                            <!-- <p><strong>API Key:</strong> <%= api_key %></p> -->
                        </div>
                        <form action="/my_devices/action" method="POST" style="display:inline;">
                            <input type="hidden" name="action" value="delete">
                            <input type="hidden" name="device_type" value="<%= rawDeviceType %>">
                            <button type="submit" class="remove-device-btn">Remove Device</button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <div style="grid-column: 1/-1; text-align: center;">
                    <p>No devices found. Add a device to get started!</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Add Device Modal -->
    <div id="addDeviceModal" class="modal">
        <div class="modal-content">
            <h2 style="color: #0B365B; margin-bottom: 1.5rem;">Add New Device</h2>
            <form id="addDeviceForm" method="POST" action="/my_devices/action">
                <div class="form-group">
                    <label for="deviceType">Device Type</label>
                    <select id="deviceType" name="device_type" required>
                        <option value="Oura Ring">Oura Ring</option>
                        <option value="fitbit">Fitbit</option>
                        <option value="apple_watch">Apple Watch</option>
                    </select>
                </div>
                <input type="hidden" name="action" value="add">
                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                    <button type="button" class="add-device-btn" style="background: transparent;" onclick="closeAddDeviceModal()">Cancel</button>
                    <button type="submit" class="add-device-btn">Add Device</button>
                </div>
            </form>
        </div>
    </div>

